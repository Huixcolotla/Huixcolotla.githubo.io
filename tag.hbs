{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="wrapper">

  {{#tag}}
  <div class="CoverImage header-cover FlexEmbed FlexEmbed--3by1" {{#if feature_image}} style="background-image: url({{feature_image}})" {{/if}}></div>
  {{/tag}}

  <div class="row">

    <div class="column column--center medium-12 large-10">
      <div class="header-box">
        {{#tag}}
        <header class="box">
          <div data-icon="ei-tag" data-size="s" class="box__icon"></div>
          <div class="box__body">
            <h4 class="box__title">{{name}}</h4>
            {{#if description}}
            <p class="box__text">
              {{description}}
            </p>
            {{/if}}
          </div>
        </header>
        {{/tag}}
      </div>
    </div>

    <div class="large-12 column">
      <div class="row">
        <div class="post-list">
          {{> loop}}
        </div>
      </div>

      <div class="row">
        {{pagination}}
      </div>
    </div>

  </div>
</div>