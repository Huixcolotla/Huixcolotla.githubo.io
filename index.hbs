{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="wrapper">

  {{! Show the first post only alone }}
  {{#foreach posts}}
    {{#is "home"}}
      {{#if @first}}
        {{> post-card passed_class="post--first"}}
      {{/if}}
    {{/is}}
  {{/foreach}}

  {{! Show the rest of posts, we will exclude the first post (homepage only) in the loop.hbs file }}
  <div class="row">
    <div class="post-list">
      {{> loop}}
    </div>
  </div>

  <div class="row">
    {{pagination}}
  </div>

</div>