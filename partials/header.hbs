<header class="site-header">

  <div class="row">
    <div class="column large-12">
      <div class="site-header__container">
        <div class="row">

          <div class="column small-8 medium-3 large-3">
            {{#if @blog.logo}}
            <a class="logo" href="{{@blog.url}}"><img class="logo__img" src="{{@blog.logo}}" alt="Logo"></a>
            {{else}}
            <h1 class="logo"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
            {{/if}}
            <h1 class="site-header__logo hide logo"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
          </div>

          <label class="off-canvas-toggle"><span data-icon="ei-navicon" data-size="s"></span></label>

          <div class="off-canvas-content">

            <div class="column medium-6 large-6">
              <nav class="navigation">
                <ul class="list-bare text-center">
                  {{navigation}}
                  <li><a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">RSS</a></li>
                </ul>
              </nav>
            </div>

            <div class="column medium-3 large-3">
              <ul class="social-nav list-bare">
                {{# if @blog.facebook}}
                  <li>
                    <a href="{{facebook_url}}" target="_blank">
                      <span data-icon="ei-sc-facebook" data-size="s"></span>
                    </a>
                  </li>
                {{/if}}
                {{# if @blog.twitter}}
                  <li>
                    <a href="{{twitter_url}}" target="_blank">
                      <span data-icon="ei-sc-twitter" data-size="s"></span>
                    </a>
                  </li>
                {{/if}}
                <li>
                  <a href="https://www.pinterest.com/{{! Add pinterest handle }}" target="_blank">
                    <span data-icon="ei-sc-pinterest" data-size="s"></span>
                  </a>
                </li>
                <li>
                  <a class="toggle-search-button" href="#">
                    <span data-icon="ei-search" data-size="s"></span>
                  </a>
                </li>
              </ul>
            </div>

          </div> {{! off-canvas-content }}

        </div>
      </div>
    </div>
  </div>

</header>

{{> search-form}}